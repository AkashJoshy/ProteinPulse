<div class="container mt-5">
  <div class="row">
    <div class="col-md-7 mx-auto mt-5">
      <div class="mt-2 p-4 shadow-lg p-3 mb-5 rounded mt-5 rounded-4" style="background-color: rgb(255, 255, 255);">
        <h2 class="text-center">ADMIN LOGIN</h2>
        {{! form }}
        <form class="mt-3 needs-validation" method="post" action="/admin/" novalidate>
          <div class="row mb-4 mt-5">
            <label for="email" class="col-sm-3 col-form-label ps-md-5">Email</label>
            <div class="col-sm-9">
              <input type="email" name="email" class="form-control" id="email">
            </div>
          </div>
          <div class="row mb-4">
            <label for="password" class="col-sm-3 col-form-label ps-md-5">Password</label>
            <div class="col-sm-9">
              <input type="password" name="password" class="form-control" id="password">
            </div>
          </div>
          <div>
            {{#if loginErr}}
            <p class="text-danger text-center">{{loginErr}}</p>
            {{/if}}
          </div>
          <button type="submit" class="btn btn-primary d-flex mx-auto"
            style="color: rgb(245, 102, 40);background-color: rgb(0, 0, 0);">LOGIN</button>
        </form>
        {{! // form }}
      </div>

    </div>
  </div>
</div>


<script src="/javaScript/validation.js"></script>