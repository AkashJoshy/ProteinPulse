<div class="mt-5">
  {{#if categoryName}}
  <h3 class="ms-3 ms-md-5"> {{categoryName}} </h3>
  {{/if}}
</div>


<div class="container ">
  {{!-- <nav aria-label="breadcrumb" class="mt-5">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a style="color: #F46F36;" href="/">Home</a></li>

      <li class="breadcrumb-item"><a style="text-decoration: none; color: grey;"
          href="">{{products.[0].categoryName}}</a></li>
    </ol>
  </nav> --}}
  <div class="row">
    {{#if products}}
    {{#each products}}
    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mt-3 products-container">
      <a href="/user/products/{{this._id}}" style="text-decoration: none;">
        <div class="card mx-auto shadow-lg" style="width: 18rem;cursor: pointer;">
          {{#if (isOffer this.offer)}}
          <div class="offer-section px-2 text-center">
            OFFER {{this.offer}}%
          </div>
          {{/if}}
          <img style="height: 8rem; width: 10.5rem;" src="/uploads/{{this.imageUrl.[0]}}"
            class="card-img-top mt-4 mx-auto product-image pt-2" alt="..." />
          <div class="card-body rounded-3">
            <h6 class="card-title text-center text-black" style="height: 30px;">
              {{this.name}}
            </h6>
            <h5 class="card-text text-black">₹{{this.salePrice}}
              <span class="px-2 text-decoration-line-through text-secondary">₹{{this.price}}</span>
            </h5>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <div>
              <a href="#" class="btn mt-3" style="background-color: #F46F36; color: white;">ADD TO CART</a>
            </div>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
    {{else}}
    <h2 class="mt-3 text-center" style="color: rgb(165, 161, 161);">No Products Available</h2>
    {{/if}}
  </div>
</div>




<script>

  const productContainer = document.querySelectorAll('.products-container')
  const productImage = document.querySelectorAll('.product-image')
  const offerSection = document.querySelectorAll('.offer-section')

  productContainer.forEach((image, index) => {
    image.addEventListener('mouseover', () => {
      productImage[index].style.transform = "translateX(55px)"
      productImage[index].style.transition = "transform 0.4s ease"

    })
    image.addEventListener('mouseout', () => {
      productImage[index].style.transform = "translateX(0px)"
      productImage[index].style.transition = "transform 0.4s ease"
    })
  })

</script>